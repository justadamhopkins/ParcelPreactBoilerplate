{
	"name": "parcelreactboilerplate",
	"version": "1.0.0",
	"description": "A boilerplate for cool web apps",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"start:client": "parcel index.html",
		"start:lambda": "netlify-lambda serve --config ./config/webpack.functions.js src/lambda",
		"build:client": "parcel build index.html --public-url ./",
		"build:lambda": "netlify-lambda build src/lambda",
		"start": "run-p start:**",
		"build": "run-p build:**",
		"clean": "rm -rf dist && mkdir dist",
		"lint:css": "stylelint './src/**/*.js'"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@apollo/react-testing": "^3.1.3",
		"@babel/cli": "^7.8.3",
		"@babel/core": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.7.6",
		"@babel/preset-env": "^7.7.7",
		"@babel/preset-react": "^7.7.4",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.4.0",
		"babel-jest": "^24.9.0",
		"babel-plugin-styled-components": "^1.10.6",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-watch": "^7.0.0",
		"concurrently": "^5.0.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.20.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-node": "^11.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.18.3",
		"eslint-plugin-standard": "^4.0.1",
		"husky": "^4.0.6",
		"jest": "^25.1.0",
		"jest-dom": "^4.0.0",
		"jest-styled-components": "^7.0.0",
		"lint-staged": "^9.5.0",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"prettier": "1.19.1",
		"react-test-renderer": "^16.12.0",
		"stylelint": "^13.2.0",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.10.0"
	},
	"dependencies": {
		"@apollo/client": "^3.0.0-beta.20",
		"@babel/runtime": "^7.7.7",
		"apollo-server-lambda": "^2.9.16",
		"encoding": "^0.1.12",
		"graphql": "^14.5.8",
		"netlify-lambda": "^1.6.3",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"styled-components": "^4.4.1",
		"styled-reset": "^4.1.0",
		"webpack-node-externals": "^1.7.2"
	},
	"jest": {
		"setupFilesAfterEnv": [
			"./test/setup.js"
		],
		"testPathIgnorePatterns": [
			"<rootDir>/node_modules/"
		],
		"moduleFileExtensions": [
			"js",
			"jsx"
		],
		"moduleNameMapper": {
			"app/(.*)$": "<rootDir>/$1"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test"
		}
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint --fix",
			"git add"
		]
	},
	"browserslist": [
		"last 1 version",
		"> 1%",
		"IE 10"
	]
}
