{
  "name": "parcelpreactboilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for cool web apps",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "parcel index.html",
    "build:client": "parcel build index.html --public-url ./",
    "build:server": "babel -d ./dist ./server -s",
    "start:lambda": "netlify-lambda serve src/lambda",
    "build:lambda": "netlify-lambda build src/lambda",
    "server": "babel-watch server/index.js",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "start": "concurrently \"npm:server\" \"npm:dev\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/preact": "^1.0.2",
    "babel-jest": "^24.9.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-watch": "^7.0.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.0.6",
    "jest": "^24.9.0",
    "jest-dom": "^4.0.0",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "1.19.1",
    "react-test-renderer": "^16.12.0"
  },
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.20",
    "@babel/runtime": "^7.7.7",
    "apollo-server-lambda": "^2.9.16",
    "graphql": "^14.5.8",
    "netlify-lambda": "^1.6.3",
    "preact": "^10.2.1",
    "preact-dom": "^1.0.1",
    "styled-components": "^4.4.1"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
